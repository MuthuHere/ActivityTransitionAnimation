<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rlRoot"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        android:background="#4C4D50"
        tools:context=".MainActivity">



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="@drawable/card_main_bg">

        <ImageView
                android:id="@+id/ivUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:transitionName="transImage"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user"/>

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivUser"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Muthu here"
                android:transitionName="transName"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#000000"/>
        <TextView
                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivUser"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:transitionName="transDesc"
                android:textStyle="normal"
                android:text="Muthu here is looking somthing new to deserve the animation to clear all data in single view "
                android:fontFamily="@font/nunito_extralight"/>

    </RelativeLayout>

</RelativeLayout>